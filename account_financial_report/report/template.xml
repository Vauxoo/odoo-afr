<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="afr_document">
            <t t-call="account_financial_report.external_layout">
                <div t-foreach="objects" t-as="o">
                    <!--VARIABLES TO BE USED LATER-->
                    <t t-set="col" t-value="o.columns"/>

                    <!-- CALLING HEADER and FOOTER -->
                    <t t-call="account_financial_report.external_layout_header"/>
                    <t t-call="account_financial_report.external_layout_footer"/>

                    <!-- DEVELOPING PAGE/BODY -->
                    <div class="page">
                        <table class="basic_table"  width="100%" id='table_body'>
                            <t t-if="col == 'one'">
                            <tbody>
                                <tr>
                                    <th class="celdaTituloTabla" width="10%" style="text-align:right;">CODE</th>
                                    <th class="celdaTituloTabla" width="70%">ACCOUNT</th>
                                    <th class="celdaTituloTabla" width="20%" style="text-align:center;">BALANCE</th>
                                </tr>
                                <t t-set="lines" t-value="lines(data['form'])"/>
                                <tr class="prueba" t-foreach="lines" t-as="line">
                                    <i>
                                    <td class="celdaLineData" style="text-align:right;font-style:italic;">
                                        <t t-if="line['label']">
                                            <span t-esc="line['code']"/>
                                        </t>
                                    </td>
                                    </i>
                                    <td class="celdaLineData" style="text-align:right;font-style:italic;">
                                        <t t-if="line['type'] == 'view'">
                                            <span t-esc="line['name'].upper()"/>
                                        </t>
                                        <t t-if="line['type'] != 'view'">
                                            <span t-esc="line['name'].title()"/>
                                        </t>
                                    </td>
                                    <td class="celdaLineData" style="text-align:right;font-style:italic;">
                                        <t t-if="line['total']">
                                            <span t-esc="formatLang(line.get('balance', 0) * line.get('change_sign',1.0), digits=2, grouping=True)"/>
                                        </t>
                                    </td>
                                </tr>
                            </tbody>
                            </t>
                            <t t-if="col == 'two'">
                            <tbody>
                                <tr>
                                    <th class="celdaTituloTabla" width="10%" style="text-align:right;">CODE</th>
                                    <th class="celdaTituloTabla" width="50%">ACCOUNT</th>
                                    <th class="celdaTituloTabla" width="20%" style="text-align:center;">DEBIT</th>
                                    <th class="celdaTituloTabla" width="20%" style="text-align:center;">CREDIT</th>
                                </tr>
                                <t t-set="lines" t-value="lines(data['form'])"/>
                                <tr class="prueba" t-foreach="lines" t-as="line">
                                    <i>
                                    <td class="celdaLineData" style="text-align:right;font-style:italic;">
                                        <t t-if="line['label']">
                                            <span t-esc="line['code']"/>
                                        </t>
                                    </td>
                                    </i>
                                    <td class="celdaLineData" style="text-align:right;font-style:italic;">
                                        <t t-if="line['type'] == 'view'">
                                            <span t-esc="line['name'].upper()"/>
                                        </t>
                                        <t t-if="line['type'] != 'view'">
                                            <span t-esc="line['name'].title()"/>
                                        </t>
                                    </td>
                                    <td class="celdaLineData" style="text-align:right;font-style:italic;">
                                        <t t-if="line['total']">
                                            <span t-esc="formatLang(line.get('debit', 0) * line.get('change_sign',1.0), digits=2, grouping=True)"/>
                                        </t>
                                    </td>
                                    <td class="celdaLineData" style="text-align:right;font-style:italic;">
                                        <t t-if="line['total']">
                                            <span t-esc="formatLang(line.get('credit', 0) * line.get('change_sign',1.0), digits=2, grouping=True)"/>
                                        </t>
                                    </td>
                                </tr>
                            </tbody>
                            </t>
                            <t t-if="col == 'four'">
                            <tbody>
                                <tr>
                                    <th class="celdaTituloTabla" width="10%" style="text-align:right;">CODE</th>
                                    <th class="celdaTituloTabla" width="42%">ACCOUNT</th>
                                    <th class="celdaTituloTabla" width="12%" style="text-align:center;">INIT. BAL.</th>
                                    <th class="celdaTituloTabla" width="12%" style="text-align:center;">DEBIT</th>
                                    <th class="celdaTituloTabla" width="12%" style="text-align:center;">CREDIT</th>
                                    <th class="celdaTituloTabla" width="12%" style="text-align:center;">BALANCE</th>
                                </tr>
                                <t t-set="lines" t-value="lines(data['form'])"/>
                                <tr class="prueba" t-foreach="lines" t-as="line">
                                    <i>
                                    <td class="celdaLineData" style="text-align:right;font-style:italic;" width="10%">
                                        <t t-if="line['label']">
                                            <span t-esc="line['code']"/>
                                        </t>
                                    </td>
                                    </i>
                                    <td class="celdaLineData" style="text-align:right;font-style:italic;" width="10%">
                                        <t t-if="line['type'] == 'view'">
                                            <span t-esc="line['name'].upper()"/>
                                        </t>
                                        <t t-if="line['type'] != 'view'">
                                            <span t-esc="line['name'].title()"/>
                                        </t>
                                    </td>
                                    <td class="celdaLineData" style="text-align:right;font-style:italic;" width="10%">
                                        <t t-if="line['total']">
                                            <span t-esc="formatLang(line.get('balanceinit', 0) * line.get('change_sign',1.0), digits=2, grouping=True)"/>
                                        </t>
                                    </td>
                                    <td class="celdaLineData" style="text-align:right;font-style:italic;" width="10%">
                                        <t t-if="line['total']">
                                            <span t-esc="formatLang(line.get('debit', 0) * line.get('change_sign',1.0), digits=2, grouping=True)"/>
                                        </t>
                                    </td>
                                    <td class="celdaLineData" style="text-align:right;font-style:italic;" width="10%">
                                        <t t-if="line['total']">
                                            <span t-esc="formatLang(line.get('credit', 0) * line.get('change_sign',1.0), digits=2, grouping=True)"/>
                                        </t>
                                    </td>
                                    <td class="celdaLineData" style="text-align:right;font-style:italic;" width="10%">
                                        <t t-if="line['total']">
                                            <span t-esc="formatLang(line.get('balance', 0) * line.get('change_sign',1.0), digits=2, grouping=True)"/>
                                        </t>
                                    </td>
                                </tr>
                            </tbody>
                            </t>
                        </table>
                    </div>
                </div>
            </t>
        </template>

        <template id="afr_template">
            <t t-call="account_financial_report.html_container">
                <t t-foreach="doc_ids" t-as="doc_id">
                    <t t-raw="translate_doc(doc_id, doc_model, 'company_id.partner_id.lang', 'account_financial_report.afr_document')"/>
                </t>
            </t>
        </template>
    </data>
</openerp>
